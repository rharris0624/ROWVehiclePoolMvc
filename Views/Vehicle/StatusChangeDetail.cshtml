@model RowVehiclePoolMVC.Models.Vehicle

@{
    ViewData["Title"] = "ChangeVehicleStatusConfirm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ChangeVehicleStatusConfirm</h1>

<div>
    <h4>Status Changed</h4><br /><br />
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VehYear)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VehYear)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Make)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Make)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Model)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Color)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Color)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VehicleType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VehicleType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OwnerBudget)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OwnerBudget)
        </dd>
   </dl>
</div>
<div>
    <a asp-action="SetVehicleStatus" asp-route-id="@Model.TagNumber">Confirm Status Change</a> |
    <a asp-action="">Cancel Status Change</a>
</div>
