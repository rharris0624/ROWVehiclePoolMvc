@model AssignmentSearchVM

<table align="center" border=1 cellspacing=0 cellpadding=0>
    <tr background-color:aliceblue">
        <td colspan="9" align="center">
            @if (Model.Page <= 1)
            {
                <a class="disable-link" asp-action="ChangeAssignmentPage" asp-route-page="@Model.Page" asp-route-pageLink="first"><img src="~/Images/first.gif" /></a>
            }
            else
            {
                <a asp-action="ChangeAssignmentPage" asp-route-page="@Model.Page" asp-route-pageLink="first"><img src="~/Images/first.gif" /></a>
            }
            @if (Model.Page > 1 && Model.PageCount > 1)
            {
                <a asp-action="ChangeAssignmentPage" asp-route-page="@Model.Page" asp-route-pageLink="previous"><img src=~/Images/prev.gif /></a>
            }
            else
            {
                <a class="disable-link" asp-action="ChangeAssignmentPage" asp-route-page="@Model.Page" asp-route-pageLink="previous"><img src="~/Images/prev.gif" /></a>
            }
            @if (Model.Page >= Model.PageCount)
            {
                <a class="disable-link" asp-action="ChangeAssignmentPage" asp-route-page="@Model.Page" asp-route-pageLink="next"><img src="~/Images/next.gif" /></a>
            }
            else
            {
                <a asp-action="ChangeAssignmentPage" asp-route-page="@Model.Page" asp-route-pageLink="next"><img src="~/Images/next.gif" /></a>
            }
            @if (Model.Page >= Model.PageCount)
            {
                <a class="disable-link" asp-action="ChangeAssignmentPage" asp-route-page="@Model.PageCount" asp-route-pageLink="last"><img src="~/Images/last.gif" /></a>
            }
            else
            {
                <a asp-action="ChangeAssignmentPage" asp-route-page="@Model.PageCount" asp-route-pageLink="last"><img src="~/Images/last.gif" /></a>
            }
        </td>
        <td colspan="2">&nbsp;&nbsp;Page:&nbsp;@Model.Page&nbsp;of&nbsp;@Model.PageCount</td>
    </tr>
    <tr bgcolor=lavender>
        <th>&nbsp;</th>
        <th>Requisition Date</th>
        <th>Requestor</th>
        <th>Departure<br />Date</th>
        <th>Return<br />Date</th>
        <th>Destination</th>
        <th>No. in<br />Party</th>
        <th>Duties</th>
        <th>Comments</th>
        <th>Tag<br />Number</th>
        <th>Status</th>
    </tr>
    @if (Model.Assignments.Count() == 0)
    {
        <tr>
            <td colspan=100 align="center" bgcolor="white">No Record</td>
        </tr>
    }
    else
    {
        @foreach (var assignment in Model.Assignments)
        {
            <tr>
                <td><a asp-action="AssignmentDetail" asp-route-requestId=@assignment.VehReqNo>View Detail</a></td>
                <td>@assignment.VehReqDate &nbsp;</td>
                <td>@assignment.Requestor &nbsp;</td>
                <td>@assignment.ReqDepartDate &nbsp;</td>
                <td>@assignment.ReqReturnDate &nbsp;</td>
                <td>@assignment.Destination &nbsp;</td>
                <td>@assignment.NoInParty &nbsp;</td>
                <td>@assignment.Duties &nbsp;</td>
                <td>@assignment.ReqComments &nbsp;</td>
                <td>@assignment.AssignTagNo &nbsp;</td>
                <td>@assignment.VehReqStatus &nbsp;</td>
            </tr>
        }
    }
    <tr background-color:aliceblue">
        <td colspan="8" align="center">
            @if (Model.Page <= 1)
            {
                <a class="disable-link" asp-action="ChangeAssignmentPage" asp-route-page="@Model.Page" asp-route-pageLink="first"><img src="~/Images/first.gif" /></a>
            }
            else
            {
                <a asp-action="ChangeAssignmentPage" asp-route-page="@Model.Page" asp-route-pageLink="first"><img src="~/Images/first.gif" /></a>
            }
            @if (Model.Page > 1 && Model.PageCount > 1)
            {
                <a asp-action="ChangeAssignmentPage" asp-route-page="@Model.Page" asp-route-pageLink="previous"><img src=~/Images/prev.gif /></a>
            }
            else
            {
                <a class="disable-link" asp-action="ChangeAssignmentPage" asp-route-page="@Model.Page" asp-route-pageLink="previous"><img src="~/Images/prev.gif" /></a>
            }
            @if (Model.Page >= Model.PageCount)
            {
                <a class="disable-link" asp-action="ChangeAssignmentPage" asp-route-page="@Model.Page" asp-route-pageLink="next"><img src="~/Images/next.gif" /></a>
            }
            else
            {
                <a asp-action="ChangeAssignmentPage" asp-route-page="@Model.Page" asp-route-pageLink="next"><img src="~/Images/next.gif" /></a>
            }
            @if (Model.Page >= Model.PageCount)
            {
                <a class="disable-link" asp-action="ChangeAssignmentPage" asp-route-page="@Model.PageCount" asp-route-pageLink="last"><img src="~/Images/last.gif" /></a>
            }
            else
            {
                <a asp-action="ChangeAssignmentPage" asp-route-page="@Model.PageCount" asp-route-pageLink="last"><img src="~/Images/last.gif" /></a>
            }
        </td>
        <td colspan="2">&nbsp;&nbsp;Page:&nbsp;@Model.Page&nbsp;of&nbsp;@Model.PageCount</td>
    </tr>
</table>
